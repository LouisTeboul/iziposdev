<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.izipass.izipos" version="4.4.11162"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:gap="http://phonegap.com/ns/1.0">
    <name>IziPos</name>
    <description></description>
    <author email="izipos.dev@gmail.com" href="http://www.izi-pass.com">
        Izipass
    </author>
    <access origin="*" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <content src="index.html" />
    <preference name="fullscreen" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="orientation" value="all" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <allow-navigation href="*" />
    <plugin name="cordova-plugin-networkinterface" spec="~1.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="at.modalog.cordova.plugin.cache" spec="https://github.com/moderna/cordova-plugin-cache.git" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="cordova-plugin-transport-security" spec="~0.1.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-plugin-sqlite-2" spec="~1.0.5" />
    <icon src="resources/icon.png" platform="ios" />
    <platform name="ios">
	    <custom-config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true/>
        </custom-config-file>
        <custom-config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false/>
        </custom-config-file>
        <icon gap:platform="ios" height="29" src="resources/ios/icon/Icon-App-29x29@1x.png" width="29" />
        <icon gap:platform="ios" height="58" src="resources/ios/icon/Icon-App-29x29@2x.png" width="58" />
        <icon gap:platform="ios" height="87" src="resources/ios/icon/Icon-App-29x29@3x.png" width="87" />
        <icon gap:platform="ios" height="40" src="resources/ios/icon/Icon-App-40x40@1x.png" width="40" />
        <icon gap:platform="ios" height="80" src="resources/ios/icon/Icon-App-40x40@2x.png" width="80" />
        <icon gap:platform="ios" height="60" src="resources/ios/icon/Icon-App-60x60@1x.png" width="60" />
        <icon gap:platform="ios" height="120" src="resources/ios/icon/Icon-App-60x60@2x.png" width="120" />
        <icon gap:platform="ios" height="180" src="resources/ios/icon/Icon-App-60x60@3x.png" width="180" />
        <icon gap:platform="ios" height="76" src="resources/ios/icon/Icon-App-76x76@1x.png" width="76" />
        <icon gap:platform="ios" height="152" src="resources/ios/icon/Icon-App-76x76@2x.png" width="152" />
        <icon gap:platform="ios" height="228" src="resources/ios/icon/Icon-App-76x76@3x.png" width="228" />
        <splash gap:platform="ios" height="480" src="resources/ios/splash/Default~iphone.png" width="320" />
        <splash gap:platform="ios" height="960" src="resources/ios/splash/Default@2x~iphone.png" width="640" />
        <splash gap:platform="ios" height="1136" src="resources/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash gap:platform="ios" height="1024" src="resources/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash gap:platform="ios" height="768" src="resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash gap:platform="ios" height="1536" src="resources/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
    </platform>
</widget>
